{
  "name": "CodeCharm",
  "displayName": "CodeCharm",
  "description": "AI-powered code comment generator for VS Code using Gemini",
  "version": "0.4.2",
  "publisher": "DeveloperPuneet",
  "icon": "images/Icon.png",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ai",
    "comments",
    "documentation",
    "gemini",
    "google ai",
    "code readability",
    "inline comments",
    "developer tools",
    "productivity",
    "vs code extension"
  ],
  "activationEvents": [
    "onCommand:CodeCharm.commentFunction",
    "onCommand:CodeCharm.suggestReadableCode",
    "onCommand:CodeCharm.setApiKey"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "CodeCharm.commentFunction",
        "title": "üß† CodeCharm: Generate Comment (Ctrl+Win+J)"
      },
      {
        "command": "CodeCharm.suggestReadableCode",
        "title": "üõ†Ô∏è CodeCharm: Improve Code Readability (Ctrl+Win+G)"
      },
      {
        "command": "CodeCharm.setApiKey",
        "title": "üîë CodeCharm: Set Gemini API Key"
      }
    ],
    "keybindings": [
      {
        "command": "CodeCharm.commentFunction",
        "key": "ctrl+win+j",
        "when": "editorTextFocus"
      },
      {
        "command": "CodeCharm.suggestReadableCode",
        "key": "ctrl+win+g",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "CodeCharm Settings",
      "properties": {
        "CodeCharm.zetaFlux": {
          "type": "string",
          "default": "",
          "description": "üîê Your Gemini API key used for generating AI comments and refactoring."
        }
      }
    }
  },
  "dependencies": {
    "node-fetch": "^2.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DeveloperPuneet/CodeCharm.git"
  }
}
